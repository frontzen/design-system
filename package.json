{
  "name": "frontzen-design-system",
  "version": "0.0.0",
  "license": "MIT",
  "private": true,
  "packageManager": "yarn@3.3.0",
  "workspaces": [
    "libs/*",
    "apps/*",
    ".storybook"
  ],
  "scripts": {
    "postinstall": "husky install",
    "storybook": "start-storybook -p 4400",
    "lint": "turbo run lint",
    "dev": "turbo run dev",
    "build-storybook": "turbo run build-storybook --",
    "workspace:format": "prettier --write ",
    "workspace:format:check": "prettier --check ",
    "workspace:lint": "eslint --max-warnings=0",
    "format": "turbo run format",
    "format:check": "turbo run format:check",
    "type-check": "turbo run type-check",
    "build": "turbo run build",
    "test": "turbo run test"
  },
  "dependencies": {
    "core-js": "^3.6.5",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "regenerator-runtime": "0.13.7",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.23.2",
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@storybook/addon-essentials": "^6.5.13",
    "@storybook/addons": "^6.5.13",
    "@storybook/builder-vite": "^0.2.5",
    "@storybook/preset-create-react-app": "^4.1.2",
    "@storybook/react": "^6.5.13",
    "@testing-library/dom": "^8.19.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/react-hooks": "^8.0.1",
    "@testing-library/user-event": "^14.4.3",
    "@types/react": "18.0.13",
    "@types/react-dom": "18.0.5",
    "@vitejs/plugin-react": "^2.2.0",
    "cypress": "^9.1.0",
    "eslint": "~8.15.0",
    "eslint-config-react-app": "^7.0.1",
    "husky": "^8.0.1",
    "jsdom": "^20.0.3",
    "lint-staged": "^13.0.3",
    "nx": "^15.2.1",
    "prettier": "^2.6.2",
    "prettier-plugin-organize-imports": "^2.3.4",
    "react-test-renderer": "18.2.0",
    "turbo": "^1.6.3",
    "typescript": "~4.7.2",
    "vite": "^3.2.4",
    "vite-plugin-dts": "^1.7.1",
    "vite-tsconfig-paths": "^3.6.0",
    "vitest": "^0.25.2"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,css,scss,md,yml}": "prettier --write"
  }
}
